@{
    ViewData["Title"] = "Guessing Game";
}

<h1 class="card roundedBorder">Guessing Game</h1>

<div class="row">
    <div class="gridContainer">
        <div class="card roundedBorder center grid">
            @if (ViewBag.Message != null)
            {
                <p>@ViewBag.Message</p>
            }
        </div>
        <div class="card roundedBorder center grid2">
            <form  asp-controller="Home" asp-action="GuessingGame" method="post">
                <label>Enter a number between 1 and 100</label>
                <input type="number" name="inputNum" />
                <input class="button roundedBorder" type="submit" name="check" value="Check" />
            </form>
        </div>
    </div>
</div>
